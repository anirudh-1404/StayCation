<% layout("/layouts/boilerplate") -%>

        <div class="row">
            <div class="col-md-8 offset-2 ">
                <br>
                <h3 class="n-heading">Create a New Listing</h3>
                <br>
                <form action="/listings" method="post" class="needs-validation" novalidate enctype="multipart/form-data">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="listing[title]" id="" placeholder="Add a catchy title"
                            class="form-control" required />
                        <div class="valid-feedback">Title looks good!</div>
                        <div class="invalid-feedback">Please enter a valid title!</div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="" placeholder="Enter description"
                            class="form-control" required></textarea>
                        <div class="invalid-feedback">Please enter a short description.</div>
                        <div class="valid-feedback">Description looks good!</div>
                    </div>
        
                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Listing Image</label>
                        <input type="file" name="listing[image]" placeholder="Enter image/URL Link"
                            class="form-control" value="https://freerangestock.com/sample/126371/beach-with-palm-tree-during-sunset.jpg"/>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="text" placeholder="1,200" name="listing[price]" class="form-control" required>
                            <div class="invalid-feedback">Oops! Price is required.</div>
                            <div class="valid-feedback">Price looks good!</div>

                        </div>
                        <div class="mb-3 col-8">
                            <label for="location" class="form-label">Location</label>
                            <input type="text" name="listing[location]" placeholder="Example: Jaipur"
                                class="form-control" required />
                            <div class="invalid-feedback">Location is required.</div>
                            <div class="valid-feedback">Location looks good!</div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" id="" placeholder="Example: India"
                            class="form-control" required>
                        <div class="invalid-feedback">Please enter a country.</div>
                        <div class="valid-feedback">Country looks good!</div>
                    </div>
                    <br>
                    <button class="btn btn-dark add-btn">Create New List</button>
                    <br>
                    <br>
                </form>
            </div>
        </div>